<div class="container">
    <div class="bg-dark text-white col-sm-1 week_cont">
        <label class="week_label offset-sm-1">Week #</label>
        <form id="sel_form" method="POST" action="/books_update">
            <select name="week" id="sel_week" class="offset-sm-1">
                {{#each weeks}}
                    <option value={{this}}>{{this}}</option>
                {{/each}}
            </select>
        </form>
    </div>
    <div id="popup_trigger" class="overlay text-white">
        <div class="popup bg-dark">
            <a class="close" href="#"><!--&times;-->X</a>
            <div><h5 class="text-white" id="day"></h5></div>
            <div class="offset-sm-1 edit_content">
                <form id="edit_form" method="POST" action="/update_db">
                    <input id="day0" type="hidden" name="day" value=""/>
                    <input id="week" type="hidden" name="week" value=""/>

                    <div class="row offset-sm-4">
                        <label>Loans</label>
                    </div>
                    <div class="row">
                        <input id="loans" type="text" name="loans" class="input_div" required/>
                    </div>
                    <div class="row offset-sm-4">
                        <label>Deposits</label>
                    </div>
                    <div class="row">
                        <input id="deposits" type="text" name="deposits" class="input_div" required/>
                    </div>
                    <div class="row offset-sm-4">
                        <label>Debit Cards</label>
                    </div>
                    <div class="row">
                        <input id="cards" type="text" name="debit_cards" class="input_div" required/>
                    </div>
                    <div class="row offset-sm-4">
                        <label>Membership</label>
                    </div>
                    <div class="row">
                        <input id="membership" type="text" name="membership" class="input_div" required/>
                    </div>
                    <div class="row offset-sm-4">
                        <label>iTransact</label>
                    </div>
                    <div class="row">
                        <input id="iTransact" type="text" name="itransact" class="input_div" required/>
                    </div>
                    <div class="row offset-sm-4">
                        <label>FIP</label>
                    </div>
                    <div class="row">
                        <input id="fip" type="text" name="fip" class="input_div" required/>
                    </div>
                    <input type="submit" value="Update" class="offset-sm-4 edit_button"/>
                </form>
            </div>
        </div>
    </div>
    <table id="books_table" class="table table-striped table-dark text-center">
        <thead>
            <tr>
                <th></th>
                <th>{{mdate}} <a href="#popup_trigger">Monday</a></th>
                <th>{{tdate}} <a href="#popup_trigger">Tuesday</a></th>
                <th>{{wdate}} <a href="#popup_trigger">Wednesday</a></th>
                <th>{{thdate}} <a href="#popup_trigger">Thursday</a></th>
                <th>{{fdate}} <a href="#popup_trigger">Friday</a></th>
            </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>
</div>